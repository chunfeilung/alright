{
  "manifest_version": 3,
  "name": "Alright: Autolink references in GitHub titles",
  "description": "Alright adds autolink references to GitHub pull request titles.",
  "version": "1.0",
  "action": {
    "default_popup": "settings.html",
    "default_icon": "alright.png"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
